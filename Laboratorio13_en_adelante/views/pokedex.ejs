<%- include ('includes/header', {username: username}) %>

<main>

    <div>
        <h2 class="text-2xl font-bold flex justify-center mb-8 mt-16">Pok√©dex</h2>
    </div>

    <div class="flex justify-center">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% pokemones.forEach(pokemon => { %>
            <div class="bg-white p-4 rounded shadow-md">
                <img src="<%= pokemon.imagen %>" alt="<%= pokemon.nombre %>" class="w-full h-48 object-cover mb-4">
                <h2 class="text-xl font-bold mb-2"><%= pokemon.nombre %></h2>
                <p class="text-gray-600"><%= pokemon.tipo %></p>
            </div>
            <% }) %>
        </div>


</main>

